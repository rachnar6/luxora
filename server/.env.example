# Example environment file for the server
# Copy this to server/.env (do NOT commit the real file)

# MongoDB connection string
MONGO_URI=mongodb://username:password@localhost:27017/your-db-name

# JWT secret for signing tokens
JWT_SECRET=your_jwt_secret_here

# Google OAuth credentials (create and set your own in GCP)
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# Cloudinary (if used)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Stripe keys (test keys)
STRIPE_SECRET_KEY=sk_test_your_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_key_here

# Other service credentials
# RAZORPAY_KEY_ID=your_razorpay_key_id
# RAZORPAY_KEY_SECRET=your_razorpay_key_secret
